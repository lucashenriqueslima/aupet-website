    <div class="field_input box_input">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="input-group">
                <input class="form-control inputs_add_rm no-border-right telefone" name="" type="text" value="" />
                <span class="input-group-addon">
                    <label>Tipo:&nbsp;</label>
                    <select style="border:1px solid #ccc" name="">
                        <option value="">Selecione..</option>
                    </select>
                </span>
                <span class="input-group-addon"><div style="margin-top: 0" class="radio-custom"><input type="radio" id="" class="radio_main" name=""><label for="">Principal</label></div></span>
            </div>
        </div>
        <div class="col-lg-1">
            <span class="icomoon-icon-plus-circle btn btn-md btn-default input_add"/></span>
